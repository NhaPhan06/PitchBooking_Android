<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.activity.AdminListCustomer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:onClick="onMenuClickAdmin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/grey_circular_border"
            android:padding="12dp"
            android:src="@drawable/menu" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="List Customer"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

    <!--Body-->

    <ListView
        android:id="@+id/list_customer"
        android:layout_width="match_parent"
        android:layout_height="455dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/DeletePitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="@color/red"
                android:drawableEnd="@drawable/delete"
                android:drawableTint="@color/white"
                android:padding="5dp"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/UpdatePitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/update"
                android:drawableTint="@color/white"
                android:padding="5dp"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>